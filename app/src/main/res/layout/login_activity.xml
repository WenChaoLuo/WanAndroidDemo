<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/top_title_layout"/>
    <LinearLayout
        android:id="@+id/id_login_layout"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:paddingStart="16dp"
            android:paddingEnd="@dimen/dp_20"
            android:background="@drawable/login_layout_bg"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/denglu"
                />
            <EditText
                android:id="@+id/id_login_username_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_weight="1"
                android:hint="请输入账号"
                android:digits="@string/login_username_input_string"
                android:layout_gravity="center_vertical"
                style="@style/login_edit_text_style"
                android:maxLength="18"
                android:textSize="@dimen/fifth_text_size"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_40"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:paddingStart="16dp"
            android:paddingEnd="@dimen/dp_20"
            android:background="@drawable/login_layout_bg"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/mima"
                />
            <EditText
                android:id="@+id/id_login_password_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/dp_10"
                android:maxLength="20"
                android:hint="请输入密码"
                android:layout_gravity="center_vertical"
                style="@style/login_edit_text_style"
                android:textSize="@dimen/fifth_text_size"
                android:inputType="textPassword"/>
        </LinearLayout>
        <TextView
            android:id="@+id/id_login_btn"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="@dimen/fifth_text_size"
            android:background="@drawable/normal_btn_bg"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="登录"/>
        <TextView
            android:id="@+id/id_login_forget_pwd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:textSize="@dimen/fifth_text_size"
            android:textColor="@color/first_text_color"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_gravity="center_horizontal"
            android:text="忘记密码"
            />
        <ProgressBar
            android:id="@+id/id_login_progress_bar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_20"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>